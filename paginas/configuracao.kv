        bold: True
        halign: 'left'
        valign: 'middle'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(40)
        spacing: dp(10)

        Label:
            text: "Corrente Fundo"
            font_size: "16sp"
            color: (1, 1, 1, 1)
            halign: 'left'
            valign: 'middle'

        MDCheckbox:
            size_hint: [None, None]
            size: dp(30), dp(30)
            color: (1, 1, 1, 1)
            active_color: (1, 1, 1, 1)
            pos_hint: {'center_y': 0.5}
