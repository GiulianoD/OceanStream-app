#:kivy 2.3.0
#:import utils kivy.utils

<TelaLogin>:
    FloatLayout:
        # Adicionando uma imagem de fundo usando canvas
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: 'res/bkg.png'  # Nome do arquivo da imagem
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'OceanStream'
            font_size: 32
            size_hint_y: None
            height: 100
            color: 1, 1, 1, 1  # Cor do texto para contrastar com a imagem de fundo

        TextInput:
            id: email
            hint_text: 'Email'
            multiline: False
            size_hint_y: None
            height: 50

        TextInput:
            id: senha
            hint_text: 'Senha'
            multiline: False
            password: True
            size_hint_y: None
            height: 50

        Button:
            text: 'Login'
            size_hint_y: None
            height: 50
            background_color: utils.get_color_from_hex('#04949c')
            on_press: root.submit()

        Label:
            id: error_message
            text: ''
            color: 1, 0, 0, 1
            size_hint_y: None
            height: 20

        Button:
            text: 'NÃ£o possui cadastro? Clique aqui'
            size_hint_y: None
            height: 50
            background_color: utils.get_color_from_hex('#04949c')
            on_press: app.root.current = 'register'  # Placeholder para tela de registro
