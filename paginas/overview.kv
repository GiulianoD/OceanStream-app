#:kivy 2.3.0
#:import utils kivy.utils

<Label>:
    font_size: 18
    color: utils.get_color_from_hex('#FFFFFF')
    text_size: self.width, None
    valign: 'middle'
    halign: 'center'

<Overview>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: 'res/gradient.png'
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)

            # Header
            Label:
                text: 'Porto de Tubar√£o - Overview'
                font_size: 30
                bold: True
                color: utils.get_color_from_hex('#FFFFFF')
                size_hint: (1, None)
                height: 80
                pos_hint: {'top': 1, 'x': 0}

            # Card branco principal
            MDCard:
                id: main_card
                padding: [0, 25, 0, 5]
                size_hint: (1, 1)
                elevation: 4
                radius: [60, 60, 0, 0]
                md_bg_color: utils.get_color_from_hex('#FFFFFF')
                pos_hint: {'center_x': 0.5}

                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True

                    BoxLayout:
                        id: card_container
                        orientation: 'vertical'
                        spacing: 5
                        padding: 50
                        size_hint_y: None
                        height: self.minimum_height  # Ajusta a altura conforme os widgets adicionados

<CardOverview@MDCard>:
    size_hint: 1, None
    height: 120
    elevation: 2
    radius: [20, 20, 20, 20]