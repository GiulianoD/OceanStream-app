#:kivy 2.3.0
#:import utils kivy.utils

<Label>:
    font_size: 18
    color: utils.get_color_from_hex('#FFFFFF')
    text_size: self.width, None
    valign: 'middle'
    halign: 'center'

<Overview>:
    FloatLayout:
        # Adicionando uma imagem de fundo usando canvas
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                source: 'res/gradient.png'  # Nome do arquivo da imagem
                pos: self.pos
                size: self.size
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)

        # Header
        Label:
            text: 'Porto de Tubarão - Overview'
            font_size: 30
            bold: True
            color: utils.get_color_from_hex('#FFFFFF')
            size_hint: (1, None)
            height: 80
            pos_hint: {'top': 1, 'x': 0}

        # Card branco abaixo ocupando o espaço restante
        MDCard:
            size_hint: (1, 1)
            elevation: 4
            radius: [60, 60, 0, 0]
            md_bg_color: utils.get_color_from_hex('#FFFFFF')
            pos_hint: {'center_x': 0.5}  # Centraliza horizontalmente
